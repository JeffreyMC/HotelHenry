@model HotelHenry.Models.Usuario
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <div class="container">
        <div class="row">
            <div class="col-md-12 mt-2 mb-5">
                <h1><i class="fa fa-user"></i> Registro de usuario</h1>
                <h2 style="color:red; font-weight:bold">@ViewBag.Message</h2>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <!--Formulario para registrarse-->
                <form method="post" class="formulario">
                    @Html.AntiForgeryToken()
                    <div>
                        @Html.LabelFor(m => m.Nombre, "Nombre")
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", pattern = "[A-Za-z]+" })
                    </div>


                    <div>
                        @Html.LabelFor(m => m.Apellidos, "Apellidos")
                        @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control glyphicon glyphicon-user", pattern = "[a-zA-ZñÑáéíóúÁÉÍÓÚ\\s]+" })
                    </div>


                    <div>
                        @Html.LabelFor(m => m.Correo, "Correo electrónico")
                        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", type = "email", required = "required", placeholder = "ejemplo@correo.com" })
                        @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "danger" })
                    </div>


                    <div>
                        @Html.LabelFor(m => m.Password, "Contraseña")
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "pass", required = "required", pattern = "(?=.*\\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" })
                    </div>

                    <div>
                        <label for="repeatPass">Repetir contraseña</label>
                    </div>

                    <div class="col1">
                        <input type="password" name="" id="repeatPass" class="form-control" required="required">
                    </div>

                    <div class="fila1">
                        @Html.LabelFor(m => m.Telefono, "Teléfono")
                        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", type = "number", required = "required" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Pais.IdPais, "País", new { @for = "Pais" })
                        @Html.DropDownListFor(model => model.Pais.IdPais, new SelectList(ViewBag.Paises, "IdPais", "Nombre"), new { @class = "form-control", name = "Pais" })
                    </div>

                    @Html.HiddenFor(m => m.Rol, new { value = "2" })
                    <br>
                    <input type="submit" value="Registrarse" class="btn btn-success btn-lg">
                </form>
            </div>

            <div class="col-md-6">
                <img src="/Logo/logoHotel.png" class="img-fluid mb-5" width="100%">
            </div>
        </div>
    </div>
</section>


@*Script de validaciones*@
<script src="/js/validacionesSignUp.js"></script>