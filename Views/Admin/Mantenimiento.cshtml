@model IEnumerable<HotelHenry.Models.Habitacion>

@{
	ViewData["Title"] = "Mantenimiento";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
	<style>

		.container {
			width:100%;
		}

	</style>
	<div class="container" style="margin-bottom:215px">
		<h1 style="margin-top:120px" class="text-center mb-4">Mantenimiento</h1>

		<table class="table table-striped table-responsive-md">
			<thead>
				<tr>
					<th>
						Tipo de habitación
					</th>
					<th>
						Precio adultos
					</th>
					<th>
						Precio niños y adultos mayores
					</th>
					<th>
						Disponible
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.Tipo)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.CostoAdultos)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.CostoNinos)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Disponible)
						</td>
						<td>
							<a asp-controller="Admin" asp-action="EditarPrecios" asp-route-id="@item.IdHabitacion">Editar precios</a>

						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
